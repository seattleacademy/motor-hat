{
  "name": "motor-hat",
  "version": "1.0.0-semanticrelease",
  "description": "Node Module to control Adafruits MotorHAT for the RaspberryPi",
  "homepage": "http://www.github.com/jcane86/motor-hat",
  "author": {
    "name": "J. Cane",
    "email": "jcane86@gmail.com",
    "url": "www.github.com/jcane86"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "main": "dist/index.js",
  "keywords": [
    "raspberry",
    "pi",
    "raspberrypi",
    "motor",
    "dc",
    "stepper",
    "servo",
    "motorhat",
    "hat"
  ],
  "devDependencies": {
    "babel-cli": "^6.23.0",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-stage-2": "^6.22.0",
    "babel-register": "^6.22.0",
    "coveralls": "^2.11.16",
    "cz-conventional-changelog": "^2.0.0",
    "del": "^3.0.0",
    "eslint": "^4.6.0",
    "eslint-config-airbnb-base": "^12.0.0",
    "eslint-plugin-babel": "^4.0.1",
    "eslint-plugin-import": "^2.2.0",
    "husky": "^0.14.0",
    "isparta": "^4.0.0",
    "mocha": "^3.2.0",
    "nyc": "^11.0.2",
    "proxyquire": "^1.7.11",
    "rimraf": "^2.6.1",
    "semantic-release": "^8.0.0",
    "should": "^13.0.0",
    "should-sinon": "0.0.6",
    "sinon": "^3.0.0"
  },
  "repository": "jcane86/motor-hat",
  "scripts": {
    "precommit": "npm run check-coverage",
    "commit": "git-cz",
    "check-coverage": "nyc check-coverage --statements 80 --branches 80 --functions 80 --lines 80",
    "report-coverage": "nyc report --reporter=text-lcov | coveralls",
    "watch:test": "npm t -- -w",
    "test": "nyc -r=lcov mocha test/ --compilers js:babel-register",
    "posttest": "npm run lint",
    "lint": "eslint .",
    "prebuild": "rimraf dist",
    "build": "babel --copy-files --out-dir dist --ignore test/ lib",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "license": "MIT",
  "dependencies": {
    "async": "^2.5.0",
    "debug": "^3.0.0",
    "i2c-bus": "^1.2.0",
    "parambulator": "^1.5.2",
    "raspi-ver": "^1.0.2",
    "sleep": "^5.1.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-2"
    ]
  }
}
